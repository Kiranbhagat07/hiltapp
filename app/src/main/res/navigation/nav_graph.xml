<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <!-- Global actions -->
    <action
        android:id="@+id/action_global_nav_home"
        app:destination="@id/nav_home" />

    <action
        android:id="@+id/action_global_nav_search"
        app:destination="@id/nav_search" />

    <action
        android:id="@+id/action_global_nav_add"
        app:destination="@id/nav_add" />

    <action
        android:id="@+id/action_global_nav_notifications"
        app:destination="@id/nav_notifications" />

    <action
        android:id="@+id/action_global_nav_profile"
        app:destination="@id/nav_profile" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.hiltproject.ui.home.HomeFragment"
        android:label="Home" />
    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.hiltproject.ui.search.SearchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/nav_add"
        android:name="com.example.hiltproject.ui.add.AddFragment"
        android:label="Add" />
    <fragment
        android:id="@+id/nav_notifications"
        android:name="com.example.hiltproject.ui.notifications.NotificationFragment"
        android:label="Notifications" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.hiltproject.ui.profile.ProfileFragment"
        android:label="Profile" />
</navigation>
